.main-nav
  background #001b1f
  color #ffffff
  min-height 410px
  padding 30px 0 50px 0
  //overflow hidden

  .container
    position relative

  &__info
    display block
    margin 0 0 32px 0
    padding 0
    list-style none

    &-item
      display block
      margin 0 0 15px 0

      &:last-child
        margin-bottom 0

    @media screen and (min-width: 840px)
      position absolute
      top 0
      right 20px
      z-index 1

      &-item
        display inline-block
        vertical-align top
        margin 0 0 0 30px
        line-height 30px

        &:first-child
          margin-left 0

    @media screen and (min-width: 1200px)
      right 0
      top 15px

  &__menu
    position relative
    font-size 20px
    line-height 1.5
    font-family Medium
    margin 0 0 32px 0

    &-list
      margin 0
      padding 0
      list-style none

    &-item
      display block
      margin 10px 0 0 0

      &:first-child
        margin-top 0

      a
        color #3ce1c2
        text-decoration none
        transition color 0.3s ease

        &:hover
          color #ffffff

  &__social
    margin 0 0 26px -20px
    //overflow hidden

    &-item
      float left
      width 130px
      margin 0 0 20px 20px

      &.btn_type_insta
        width auto

      &.btn
        line-height 30px
        padding-top 5px
        padding-bottom 5px
        font-size 0
        width 60px

        .btn__icon
          margin 0

  &__links
    margin 0 0 22px 0
    font-size 12px
    font-family Medium
    line-height 1.5

    &-item
      display block
      padding 6px 0

      a
        color #c2c5c5
        text-decoration none

        &:hover
          text-decoration underline

  &__copyright
    display inline-block
    vertical-align top
    color #6e7677
    font-size 12px

    a
      color #3ce1c2
      text-decoration none
      font-family Medium

      &:hover
        color #ffffff

  @media screen and (min-width: 930px)
    min-height 680px
    padding-top 66px

    &__menu
      position relative
      font-size 40px
      margin 0 0 74px 0

      &-item
        margin 20px 0 0 0

    &__social
      margin 0 0 78px 0

      &-item
        float none
        width auto
        margin 0 25px 0 0

        &.btn
          font-size 20px
          padding-top 10px
          padding-bottom 10px
          width auto

          .btn__icon
            margin 0 10px 0 0

    &__links
      margin 0
      font-size 15px
      font-family Regular
      line-height 30px

      &-item
        display inline-block
        vertical-align middle
        padding 0
        margin 0 40px 0 0

