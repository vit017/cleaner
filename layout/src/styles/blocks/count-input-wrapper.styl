.count-input-wrapper

  &__item
    display block

  @media screen and (min-width: 620px)
    margin 0 0 0 -20px

    &__item
      float left
      width 50%
      padding 0 0 0 20px

      > :last-child
        margin-bottom 0

  @media screen and (min-width: 930px)
    margin 0 0 0 -20px

    &__item
      float left
      width 355px
      padding 0
      margin 0 0 0 20px