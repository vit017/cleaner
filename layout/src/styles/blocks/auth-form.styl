.auth-form
  position relative

  .input-txt_width_full
    margin 0 0 10px 0

    &:last-of-type
      margin-bottom 30px

  &__forgot-pass
    display block
    font-family Medium
    padding 15px 0 25px 0

  &__title
    margin 0 0 20px 0

    & + .auth-form__txt
      margin-top -8px

  &__txt
    font-size 15px
    line-height 22px
    margin 0 0 25px 0

  @media screen and (max-width: 480px)
    .btn
      width 100%

  @media screen and (min-width: 930px)
    &__title
      font-size 40px
      margin-bottom 28px

    .input-txt_width_full
      margin-bottom 20px

      &:last-of-type
        margin-bottom 40px

    &__forgot-pass
      text-align right
      padding 0
      margin 0 0 5px 0

    .input-txt_width_full
      & + .auth-form__forgot-pass
        margin-top -25px