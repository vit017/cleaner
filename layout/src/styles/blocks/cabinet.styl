.cabinet
  display block
  position relative

  &__header
    position relative
    margin 0 0 30px 0

  &__title
    display block
    font-size 25px
    line-height 1.3
    font-family Medium
    font-weight normal
    margin 0
    padding 0

  &__cancel
    display block
    padding 10px 0 0 0
    font-size 15px
    line-height 30px

  &__order-price
    display block
    font-size 20px
    line-height 1.5
    font-family Medium
    padding 20px 0
    margin 0 0 15px 0

    &-content
      display block

    &-tip
      display block
      font-size 12px
      line-height 20px
      font-family Regular
      color #6e7677
      margin 3px 0 0 0

  @media screen and (min-width: 930px)
    &__header
      margin-bottom 30px

    &__title
      font-size 30px
      float left

    &__cancel
      float right

    &__order-price
      font-size 30px
      margin-bottom 30px

      &-content
        display inline

      &-tip
        margin 0