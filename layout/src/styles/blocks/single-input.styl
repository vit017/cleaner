.single-input
  display block
  margin 0 0 10px 0
  font-family Regular

  &__control
    display block
    width 100%
    margin 0 0 17px 0

    select
      display block
      width 100%

  &__tip
    display block
    color #6e7677
    font-size 15px
    line-height 20px

  @media screen and (min-width: 620px)
    margin 0 0 18px 0

    &__control
      float left
      width 280px
      margin 0 20px 0 0

    &__tip
      float left
      line-height 50px

  @media screen and (min-width: 620px)

    &__control
      width 360px
      margin 0 30px 0 0


