.order-detail
  display block
  position relative
  margin 0 0 40px 0

  &:last-child
    margin 0

  &__header
    position relative
    margin 0 0 20px 0
    padding 0 0 0 30px

    .status
      position absolute
      left 0
      top 0
      width 27px
      overflow hidden

    &-content
      margin 10px 0 0 -30px

  &__title
    display block
    font-size 25px
    line-height 1.3
    font-family Medium
    font-weight normal
    margin 0
    padding 0

  &__content
    .order-item:last-of-type
      margin-bottom 30px

  @media screen and (min-width: 930px)
    margin-bottom 60px

    &__header
      margin-bottom 30px
      padding 0

      &-content
        margin 0 0 0 20px
        float right
        width 320px

        .status
          position relative
          width auto
          float left

        .comment-link
        .rating
          float right

    &__title
      font-size 30px
      float left
      width 380px

    &__content
      .order-item:last-of-type
        margin-bottom 40px
