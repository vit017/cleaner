.feedback-form
  position relative

  &__intro
    margin 0 0 30px 0

    &-desc
      margin 0
      padding 0
      font-size 15px
      line-height 22px

    &-controls
      margin 20px 0 0 0

  &__fieldset
    border none
    padding 0
    margin 0 0 30px 0

  &__controls
    text-align right

    .cancel-link
      float left
      margin 10px 0 0 0

    .btn
      float right

  @media screen and (min-width: 930px)
    &__intro
      margin 0 0 35px 0
      padding 5px 0 0 0

      &-desc
        float left
        width 430px

      &-controls
        margin 4px 0 0 0


    &__fieldset
      margin-bottom 40px

    &__controls

      .cancel-link
        float none
        margin 10px 40px 0 0

      .btn
        float none