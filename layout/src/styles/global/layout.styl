html
body
.page-container
  height 100%

body.menu-open
  overflow hidden

.page-container
  position relative

.container
  margin 0 auto
  padding 0 20px

  @media screen and (min-width: 1200px)
    width 1170px
    padding 0

.page-wrapper
  box-sizing border-box
  padding 0 0 410px 0
  min-height 100%
  width 100%
  overflow-y visible
  height auto !important
  height 100%
  background #ffffff

  //@media screen and (min-width: 760px)
  //padding-bottom 680px

  @media screen and (min-width: 930px)
    background transparent
    padding-bottom 680px

  &_background_none
    background transparent !important

    .page-header::after
      display none

.landing-page
  .page-wrapper
    padding 0

.page-content
  position relative
  padding 16px 0 0 0

  &_padding_no
    padding 0 !important

  @media screen and (min-width: 930px)
    padding 40px 0 90px 0


.page-block
  background #ffffff
  padding 0 0 40px 0

  @media screen and (min-width: 930px)
    padding 45px 70px 60px 70px

.page-header
  height 50px
  position relative
  background #ffffff
  background rgba(255, 255, 255, 0.3)

  &::after
    content ""
    display block
    position absolute
    top 100%
    left 0
    width 100%
    background #eff1f1
    height 1px

  &__logo
    display block
    width 95px
    height 50px
    position absolute
    top 0
    left 50%
    margin 0 0 0 -48px
    background url('../images/logo_small.png') 0 center no-repeat

  &__city
    display none

  &__nav
    display inline-block
    vertical-align top

  &__control
    display inline-block
    vertical-align top
    font-size 15px
    line-height 50px
    height 50px
    font-family Medium
    color #000000
    text-decoration none
    position relative

    .phone-block
      cursor default
      color inherit !important

    &:hover
      color #000000
      text-decoration none

    &-title
      display none

    &_type_auth
      //padding 0 0 0 25px
      position absolute
      right 0
      width 54px

      &::before
        content ""
        display block
        width 14px
        height 15px
        position absolute
        left 20px
        top 50%
        margin -8px 0 0 0
        background url64('../images/icons/icon-01.svg') 0 0 no-repeat

      &:hover
        &::before
          background-image url64('../images/icons/icon-02.svg')

    &_type_menu
      //padding 0 0 0 30px
      position absolute
      left 0
      width 58px
      cursor pointer

      &::before
        content ""
        display block
        width 18px
        height 15px
        position absolute
        left 20px
        top 50%
        margin -8px 0 0 0
        background url64('../images/icons/icon-03.svg') 0 0 no-repeat

      &:hover
        &::before
          background-image url64('../images/icons/icon-04.svg')

    &_type_phone
      display none

  @media screen and (min-width: 930px)
    &::after
      display none

  @media screen and (min-width: 840px)
    &__city
      display inline-block
      vertical-align top
      padding 20px 0 0 0

  @media screen and (min-width: 768px)
    &__control

      &_type_phone
        display inline-block

  @media screen and (min-width: 480px)
    height 70px

    &__logo
      position relative
      top auto
      left auto
      height 70px
      float left
      margin 0 80px 0 0

    &__nav
      float right
      margin 10px 0 0 0

    &__control
      margin 0 0 0 55px

      &:first-child
        margin-left 0

      &:hover
        .page-header__control-title
          text-decoration underline

      &-title
        display block

      &_type_auth
        padding 0 0 0 25px
        position relative
        right auto
        width auto

        &::before
          left 0

      &_type_menu
        padding 0 0 0 30px
        position relative
        left auto
        width auto

        &::before
          left 0

.page-footer
  position relative
  padding 0
  min-height 410px
  margin -410px 0 0 0

  @media screen and (min-width: 930px)
    min-height 680px
    margin-top -680px