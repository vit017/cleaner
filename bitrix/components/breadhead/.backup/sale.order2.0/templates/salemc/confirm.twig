<section class="order">
    <div class="container">
        <h1 class="text-uppercase">Заказ услуг</h1>
        <div class="row">
            <div class="col-lg-10 order_steps">
                <ul class="nav nav-tabs nav-justified hidden-xs">
                    <li class="params"><a href="/order/basket/" class="v"><span data-step="1"></span>Параметры помещения</a></li>
                    <li class="date_time"><a href="/order/" class="v"><span data-step="2"></span>Дата и время</a></li>
                    <li class="your_data active"><a><span data-step="3"></span>Ваши данные</a></li>
                    <li class="order_check"><a><span data-step="4"></span>Проверка заказа</a></li>
                    <li class="paying"><a><span data-step="5"></span>Оплата</a></li>
                </ul>
                <div class="tab-content">
                    <div id="sms" class="tab-pane fade text-center in active">
                       <!-- <form class="form-inline" role="form">-->
                            <div class="row">
                                <div class="col-xs-12">
                                    <h3>Введите код из смс-сообщения</h3>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-sm-6 center-block">
                                    Мы отправили сообщение с кодом подтверждения на ваш номер телефона <b>{{ result.POST.ORDER_PROP_PERSONAL_PHONE }}</b>
                                    <button type="button" class="btn btn-link" onclick="document.order_form.CurrentStep.value='2'; document.order_form.BACK.value='Y'; document.order_form.submit();">изменить номер</button>
                                    <input required type="text" name="sms-pass"  name="confirm_code" placeholder="Введите код">
                                     {% if result.ERROR_MESSAGE|length > 0 %}
                                        <span class="input-txt__error">{{ result.ERROR_MESSAGE }}</span>
                                    {% endif %}
                                    {#% if result.CHECK_NUMBER == 'N' %}
                                        <span class="sms-confirm__resend js-sms-resend">
                                            <input class="sms-confirm__resend-input" type="checkbox" name="RESEND" value="on"/>

                                            <button class="sms-confirm__link" type="button" class="btn btn-link">отправить смс повторно</button>
                                        </span>
                                    {% endif %#}

                                    <input type="hidden" value="{{ result.POST.ORDER_PROP_NAME }}" name="ORDER_PROP_NAME">
                                    <input type="hidden" value="{{ result.POST.ORDER_PROP_PERSONAL_CITY }}" name="ORDER_PROP_PERSONAL_CITY">
                                    <input type="hidden" value="{{ result.POST.ORDER_PROP_PERSONAL_STREET }}" name="ORDER_PROP_PERSONAL_STREET">
                                    <input type="hidden" value="{{ result.POST.ORDER_PROP_PERSONAL_PHONE }}" name="ORDER_PROP_PERSONAL_PHONE">
                                    <input type="hidden" value="{{ result.POST.street }}" name="street">
                                    <input type="hidden" value="{{ result.POST.house }}" name="house">
                                    <input type="hidden" value="{{ result.POST.flat }}" name="flat">

                                </div>
                                <button type="submit" class="btn btn-default">Сохранить</button>
                            </div>
                     <!--   </form>-->
                    </div>
                </div>
            </div>
            <div class="col-lg-2 visible-lg">
                <a data-toggle="modal" data-target="#places" class="faq">Где мы наводим чистоту</a><br>
                <a data-toggle="modal" data-target="#tools" class="faq">Чем мы наводим чистоту</a><br>
            </div>
        </div>
    </div>
</section>


