

    <form class="auth-form js-form-validate" name="system_auth_form{{ result.RND }}" method="post" target="_top" action="{{ result.AUTH_URL }}">


        <div class="container">
            <h1 class="text-uppercase">Вход</h1>
            <div class="row">
                <div class="col-md-6 center-block well text-center">
                    <label class="input-txt input-txt_width_full {% if params.AUTH_RESULT.TYPE == 'ERROR'  %}input-txt_state_error{% endif %}" data-placeholder="E-mail">
                    </label>
                    <form class="form-inline" role="form" id="thisform">
                        <p><input required type="email" name="USER_LOGIN" placeholder="E-mail" value="{{ result.USER_LOGIN }}"></p>
                        <p><input required type="password" name="USER_PASSWORD" placeholder="Пароль"></p>
                        <p><button type="button" class="btn btn-link" onclick="location.href='{{ result.AUTH_FORGOT_PASSWORD_URL }}'">Забыли пароль?</button></p>
                        <button type="submit" class="btn btn-default">Войти</button>

                        {% if result.BACKURL != '' %}
                            <input type="hidden" name="backurl" value="{{ result.BACKURL }}" />
                        {% endif %}
                        {% for key, value in result.POST %}
                            <input type="hidden" name="{{ key }}" value="{{ value }}" />
                        {% endfor %}

                        <input type="hidden" name="AUTH_FORM" value="Y" />
                        <input type="hidden" name="TYPE" value="AUTH" />

                        <!--<h2 class="auth-form__title">Вход</h2>-->
